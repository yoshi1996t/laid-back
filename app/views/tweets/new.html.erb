<div class="contents row">
  <div class="container">
    <h3>投稿する</h3>
    <%= form_with(model: @tweet, local: true) do |form| %>
      <input type="hidden" name="map[address]" id="hidden_address">
      <%= form.collection_select(:genre_id, Genre.all, :id, :name, {}, {class:"genre-select"}) %>
      <%= form.text_field :name, placeholder: "Nickname" %>
      <%= form.file_field :image, placeholder: "Image Url" %>
      <%= form.text_area :text, placeholder: "text", rows: "10" %>
      <%= form.text_field :address, placeholder: "text", rows: "10" %>
      <%= form.submit "投稿する" %>
<%= render "tweets/googlemaps" %>
    <% end %>
  </div>
</div>
