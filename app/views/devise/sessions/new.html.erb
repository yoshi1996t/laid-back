<div class="body"></div>
<div class="grad"></div>
<div class="header-tittle">
<div>Laid<span>Back</span><br>日々の生活に<br>癒しを</div>
</div>
<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="login">

        <%= f.email_field :email, autofocus: true, autocomplete: "email", :placeholder => "email", class: "input-login" %>

        <%= f.password_field :password, autocomplete: "current-password", :placeholder => "passwprd", class: "input-login" %>
      
      <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
      <% end %>

      <div class="field">
        <%= f.submit "Log in", class: 'sign-btn' %>
      </div>
      <div class="signpu-field">
        <%= link_to '新規登録', new_user_registration_path, class: "sign-btn" %>
      </div>
  </div>
<% end %>

